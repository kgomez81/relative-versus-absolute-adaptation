@Article{sackman2017mutation,
  author   = {Sackman, Andrew M and McGee, Lindsey W and Morrison, Anneliese J and Pierce, Jessica and Anisman, Jeremy and Hamilton, Hunter and Sanderbeck, Stephanie and Newman, Cayla and Rokyta, Darin R},
  title    = {{Mutation-Driven Parallel Evolution during Viral Adaptation}},
  journal  = {Molecular Biology and Evolution},
  year     = {2017},
