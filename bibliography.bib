number = {2},
pages = {173--187},
publisher = {[Nordic Society Oikos, Wiley]},
title = {{The Influence of Size and Phylogeny on Patterns of Covariation among Life-History Traits in the Mammals}},
url = {http://www.jstor.org/stable/3544261},
volume = {41},
year = {1983}
