keywords = {Competitive release,Plasmodium chabaudi,selection coefficient,transmission,within-host fitness},
number = {10},
pages = {2952--2968},
title = {{CHEMOTHERAPY, WITHIN-HOST ECOLOGY AND THE FITNESS OF DRUG-RESISTANT MALARIA PARASITES}},
