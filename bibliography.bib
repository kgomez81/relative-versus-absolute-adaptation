@article{mezey2003comparing,
abstract = {Common principal components (CPC) analysis is a technique for assessing whether variance-covariance matrices from different populations have similar structure. One potential application is to compare additive genetic variance-covariance matrices, G. In this article, the conditions under which G matrices are expected to have common PCs are derived for a two-locus, two-allele model and the model of constrained pleiotropy. The theory demonstrates that whether G matrices are expected to have common PCs is largely determined by whether pleiotropic effects have a modular organization. If two (or more) populations have modules and these modules have the same direction, the G matrices have a common PC, regardless of allele frequencies. In the absence of modules, common PCs exist only for very restricted combinations of allele frequencies. Together, these two results imply that, when populations are evolving, common PCs are expected only when the populations have modules in common. These results have two implications: (1) In general, G matrices will not have common PCs, and (2) when they do, these PCs indicate common modular organization. The interpretation of common PCs identified for estimates of G matrices is discussed in light of these results.},
author = {Mezey, Jason G and Houle, David},
journal = {Genetics},
number = {1},
pages = {411--425},
publisher = {Genetics Soc America},
title = {{Comparing G matrices: Are common principal components informative?}},
volume = {165},
year = {2003}
}
@article{SCHNEIDER201093,
abstract = {We analytically study a deterministic model for the spread of drug resistance among human malaria parasites. The model incorporates all major characteristics of the complex malaria transmission cycle and accounts for the fact that only a fraction $\alpha$of infected hosts receive drug treatment. Furthermore, the model incorporates that hosts can be co-infected. The number m of parasites co-infecting a host is either a constant or, more generally, follows a given frequency distribution. Although the model is formulated in a multilocus setup, for our results we assume that drug resistance is caused by a single locus with two alleles -- a sensitive one and a resistant one. We assume that the resistant allele has a selective advantage only in treated hosts and pays metabolic costs, which causes this allele to be deleterious in untreated hosts. We provide necessary and sufficient conditions for the fixation of the resistant allele. Moreover, provided the resistant allele will sweep through the population, we derive a formula for the time until it reaches a given frequency and in particular for the time until quasi-fixation. Furthermore, we establish an analytical solution for allele frequency changes at a linked neutral biallelic locus due to the rapid increase in frequency of the resistant allele. Our solution describes a local reduction in heterozygosity among parasite chromosomes around the resistant allele, the effect commonly referred to as the hitchhiking effect, as a function of $\alpha$and m. The result therefore allows the investigation of selective sweep patterns under specific demographic settings. We find that the hitchhiking effect is similar but different from the standard model of genetic hitchhiking that assumes random mating and homogeneous selection. In particular, the process of recombination and selection cannot be decoupled. We further explain why standard hitchhiking theory cannot be applied to drug resistance in malaria. Furthermore, we will show that a genome-wide reduction in relative heterozygosity can occur provided a fraction of hosts is infected by a single parasite haplotype. Finally, we show how to incorporate host heterogeneity, and generalize our results to this biologically more realistic case.},
author = {Schneider, Kristan A and Kim, Yuseob},
doi = {https://doi.org/10.1016/j.tpb.2010.06.005},
issn = {0040-5809},
journal = {Theoretical Population Biology},
keywords = {Co-infections,Drug concentration,Host heterogeneity,Malaria,Quasi-fixation,Relative heterozygosity,Selective sweep},
number = {2},
pages = {93--108},
title = {{An analytical model for genetic hitchhiking in the evolution of antimalarial drug resistance}},
url = {http://www.sciencedirect.com/science/article/pii/S0040580910000626},
volume = {78},
year = {2010}
}
@article{lande1982quantitative,
abstract = {Dynamic models of quantitative (polygenic) characters are more generally applicable in the analysis of life history evolution than are static optimization methods or one and two locus genetic models. A dynamic theory of life history evolution is derived by synthesizing population demography with quantitative genetics. In a population under weak selection with a nearly stable age distribution, the relative fitness of individuals with a particular life history phenotype can be approximated as an average of age-specific relative fecundity and mortality rates, weighted respectively by the present productivity and future reproductive value of each age-class. An adaptive topography is constructed showing that, with phenotype- and age-specific fecundity and mortality rates constant in time, evolution of the mean life history maximizes the intrinsic rate of increase of a population. However, the rate and direction of evolution in response to selection are strongly influenced by genetic correlations among characters. Negative genetic correlations among major components of fitness are often obscured phenotypically by positive environmental correlations, but commonly constitute the ultimate constraint on life history evolution, as illustrated by artificial selection experiments. Methods are suggested for measuring selective forces and evolutionary constraints that effect life history characters in natural populations.},
author = {Lande, Russell},
doi = {10.2307/1936778},
issn = {1939-9170},
journal = {Ecology},
number = {3},
pages = {607--615},
publisher = {Ecological Society of America},
title = {{A quantitative genetic theory of life history evolution}},
url = {http://dx.doi.org/10.2307/1936778},
volume = {63},
year = {1982}
}
@book{MATHER1971,
abstract = {It could be argued that biometrical genetics is the foremost contribution of Birmingham to the world of learning in the present century. For this, the major credit goes to Professor Mather, and secondly to his principal collaborators, J. L. Jinks and B. J. Haynian. Biometrical Genetics was first published in 1949, with K. Mather as sole author [cf. XIX, p. 913]. It has undoubtedly been one of the most influential monographs of recent times. In the ensuing twenty years, extensive research into and extension of the ideas adumbrated in Mather's book have taken place, largely at Birmingham University, and the present second edition, of which Professor Jinks is now coauthor, though recognizably based on its predecessor, is so greatly enlarged as virtually to constitute a new work. It is the best guide to the research programme that Professor Mather has inspired. The present edition comprises twelve chapters. The first, on the genetical foundation, does not differ greatly from what went before; perhaps the mystique in which polygenes were originally enshrouded is now toned down. Chapter 2, on Characters, also follows the lines of the corresponding chapter in the earlier book. Chapter 3, however, is considerably changed and includes a description of recent work on the biometrical analysis of plasmatic variation. Scaling tests and scale transformation have been transferred to the next chapter, where they follow the treatment of additive and dominant components. It is difficult to avoid the impression that scale transformation is still the Achilles' heel of much of the elegant mathematical edifice which the authors present to us, especially when one finds, as is pointed out on p. 82, that a "scale which is satisfactory for fitting an additive-dominance model" may conflict with the "one which will normalize the distributions within the non-segregating generations". Chapter 5 has much new material and deals at length with nonallelic interaction, genotype x environment interaction and heterosis. In chapter 6, we pass on to the potentialities of 2nd degree statistics; this chapter reproduces much of the former chapter 4 on the partitioning of variance, with an interesting addition on weighted analysis. The chapter on linkage follows along the lines of the former chapter, but new examples are taken; in its final section the analysis of genotype x environment interaction proceeds one stage further. Chapter 8, in addition to treating randombreeding populations, formerly treated in chapter 4, also deals with the genetic study of twins, the genetics of experimental populations and the effect of partial inbreeding. Diallel analysis has been amongst the major preoccupation of the Birmingham School and is expounded at length in Chapter 9. Various special cases are treated in the next chapter, namely sex linkage, maternal effects, and the genetics of haploids and polyploids. The last two chapters follow the general lines of the final two chapters of the first edition. The first deals with the number of effective factors and the rate of advance under selection, both matters where the concordance between theory and practice has been unimpressive. The second, entitled Experiments and concepts, is able to review many carefully set up genetical experiments where the first edition was only able to refer to one as fully adequate, and even this one is not included in this chapter of the second edition. Opportunity is also taken here to attempt a rebuttal of some of the weightier criticims that current biometrical genetics has had to meet, notably by Gilbert [cf. XXXI, 2873], but hardly with sufficient force to disarm a persistent critic. The number of references in the bibliography has trebled in comparison with the former edition, and the current volume may be confidently recommended as definitive within its field.},
