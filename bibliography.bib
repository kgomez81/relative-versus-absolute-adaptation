@Article{Payne2019,
  author    = {Payne, Joshua L and Menardo, Fabrizio and Trauner, Andrej and Borrell, Sonia and Gygli, Sebastian M and Loiseau, Chloe and Gagneux, Sebastien and Hall, Alex R},
  title     = {{Transition bias influences the evolution of antibiotic resistance in \textit{Mycobacterium tuberculosis}}},
  journal   = {PLOS Biology},
